{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@plone/restapi-angular": ["lib/@plone/restapi-angular"],
      "angular-traversal": [
        "../node_modules/angular-traversal"
      ],
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "rxjs": [
        "../node_modules/rxjs"
      ],
      "rxjs/*": [
        "../node_modules/rxjs/*"
      ]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "files": [
    "./src/main.ts",
    "./src/polyfills.ts",
    "../src/index.ts"
  ],
  "include": [
      "./src/app/**/*"
  ]
}
